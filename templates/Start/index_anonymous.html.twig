{% extends 'base.html.twig' %}

{% block subtitle %}{{ "start.title"|trans({'%domain%': domain}) }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-10">
            <h1>{{ "start.title"|trans({'%domain%': domain}) }}</h1>

            <p class="lead">{{ "start.intro"|trans }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-col-sm-5 col-md-5">
            <h2>{{ "start.registration-header"|trans }}</h2>

            <p>{{ "start.registration-text"|trans({'%domain%': domain}) }}</p>

            <a href="{{ path('register') }}" class="btn btn-primary btn-lg">{{ "start.registration-button"|trans }}</a>
        </div>
        <div class="col-xs-12 col-col-sm-4 col-md-3">
            <form class="" role="form" action="{{ path('login_check') }}" method="post">
                <h2 class="form-signin-heading">{{ "form.signin-header"|trans }}</h2>

                <div class="form-group">
                    <input type="text" id="username" class="form-control" name="_username"
                           placeholder="{{ "form.email"|trans }}"
                           required=""
                           autofocus=""/>
                </div>
                <div class="form-group">
                    <input type="password" id="password" class="form-control" name="_password"
                           placeholder="{{ "form.password"|trans }}" required="">
                </div>
                <div class="form-group">
                    <a href="{{ path('recovery') }}">{{  "form.recovery-link"|trans }}</a>
                </div>

                <button class="btn btn-lg btn-primary " type="submit">{{ "form.signin"|trans }}</button>
            </form>
        </div>
    </div>

{% endblock %}
