{% extends 'base.html.twig' %}

{% form_theme form 'Form/fields.html.twig' %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li><a href="{{ path('index') }}">Start</a></li>
        <li><a href="{{ path('account') }}">{{ "start.account-settings"|trans }}</a></li>
        <li class="active">{{ "recovery-token.headline"|trans }}</li>
    </ol>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <h2>{{ "recovery-token.headline"|trans }}</h2>

            {% if recovery_token is defined %}
                <p class="lead">{{ "recovery-token.created-headline"|trans }}</p>
                <p class="lead alert alert-warning">{{ recovery_token }}</p>
            {% else %}
                {% if recovery_secret_set %}
                    <p class="alert alert-warning">{{ "recovery-token.set"|trans }} {{ 'recovery-token.set-extra'|trans }}</p>
                {% else %}
                    <p class="alert alert-danger">{{ "recovery-token.unset"|trans }}</p>
                {% endif %}

                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_label(form.password) }}
                    {{ form_errors(form.password) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control' }}) }}
                </div>

                <div class="form-group">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-danger' }}) }}
                </div>

                {{ form_end(form) }}
            {% endif %}

        </div>
        {% if recovery_token is defined %}
            <div class="col-xs-12 col-sm-6 col-md-6">
                <div class="alert alert-info side-infobox">
                    <ul>
                        <li><strong>{{ "recovery-token.created-info"|trans }}</strong></li>
                        <hr />
                        <li>{{ "recovery-token.displayed-once"|trans }}</li>
                    </ul>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
